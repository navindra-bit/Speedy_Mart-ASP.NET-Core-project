@{
	Layout = null;
}
 @model Speedy_Groceries.Models.UserInfo

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

   
    @{
        ViewData["Title"] = "Edit Profile";
        bool isEditMode =  false ;
    }

    <h2>@(isEditMode ? "Edit Profile" : "My Profile")</h2>

    <form asp-action="@(isEditMode ? "SaveProfile" : "EditProfile")"asp-controller="Setting" method="post">
        <label for="FullName">Full Name</label>
        <input type="text" id="FullName" name="name" value="@Model?.name ?? " " " @(isEditMode ? "" : "readonly") />

        <label for="Email">Email</label>
        <input type="email" id="Email" name="email" value="@Model?.email ?? " " " @(isEditMode ? "" : "readonly") />

        <label for="Phone">Phone</label>
        <input type="tel" id="Phone" name="phoneNumber" value="@Model?.phoneNumber ?? " " " @(isEditMode ? "" : "readonly") />
 

        <button type="submit">@(isEditMode ? "Save" : "Edit")</button>
    </form>

</body>
</html>



