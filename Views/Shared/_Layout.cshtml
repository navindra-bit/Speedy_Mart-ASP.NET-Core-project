<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>SpeedyMart </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link type="image/x-icon" rel="icon" href="~/Image/Speedy Groceries2.png" sizes="128x128" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=help" />
    <style>
        .Tophead nav {
            background-color: white;
            display: flex;
            justify-content: center;
            padding: 17px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            .Tophead nav ul {
                display: flex;
                flex-direction: row;
                gap: 30px;
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .Tophead nav a {
                color: black;
                font-weight: bold;
                text-decoration: none;
                cursor: pointer;
                transition: color 0.3s ease;
            }

                .Tophead nav a:hover {
                    color: #007bff;
                }

        .ProductBox:hover {
            box-shadow: 0px 8px 20px rgba(100, 100, 111, 0.2);
           
        }
    </style>
</head>
@{
<body>
    <header class="Headerstay">
        <!-- Logo -->
        <div>
            <a href="/">
                <img src="~/Image/Logo.png" alt="Logo" style="width:85px; height:60px;margin-left:20px;" />
            </a>
        </div>
        
        <!-- Search Bar -->
        <form class="d-flex" role="search" autocomplete="off">
            <input class="search-len" type="search" placeholder="Search Groceries Now" aria-label="Search">
            <button class="btn btn-outline-success iSearch " type="submit">Search</button>
        </form>
        
        <!-- Login Dropdown -->
        <div class="dropdown">
            <a asp-controller="Userentry" asp-action="Login" class="btn dropdown-toggle dropdownBox b " type="button" id="dropdownMenuButton" aria-expanded="false">
                <i class="bi-person"></i>   Login
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" asp-controller="Userentry" asp-action="Register">Sign Up</a></li>
                <li><a class="dropdown-item" asp-controller="Userentry" asp-action="Login">My Profile</a></li>
                <li><a class="dropdown-item" asp-controller="Userentry" asp-action="Login">Orders</a></li>
                <li><a class="dropdown-item" asp-controller="Userentry" asp-action="Login">Wishlist</a></li>
                <li><a class="dropdown-item" asp-controller="Userentry" asp-action="Login">Rewards</a></li>
                <li><a class="dropdown-item" href="#">Gift Card</a></li>
                <li><a class="dropdown-item" href="#">Help</a></li>
            </ul>
        </div>

        <!-- Cart & Seller Links -->
        <div class="Header-actions">
            <a  asp-controller="Cart" asp-action="Index"  class="btn btn-link">
                <i class="bi bi-cart-fill"></i> Cart
            </a>
            <a href="/Seller/Register" class="btn btn-link">
                <i class="bi bi-shop"></i> Become a Seller
            </a>
            <a href="/Seller/Register" class="btn btn-link">
                <i class="material-symbols-outlined"></i> Help 24x7
            </a>
        </div>

     
    </header>
    <div class="Tophead" >
        <nav  style="background-color:lightgreen;"  >
            <ul>
                <li><a href="#Fashion">Fashion</a></li>
                <li><a asp-controller="Products" asp-action="Electronics"> Electronics</a></li>
                <li><a href="#Fruits&Vegetables">Fruits & Vegetables</a></li>
                <li><a href="#Beverages">Beverages</a></li>
                <li><a href="#Beauty&Hygiene">Beauty & Hygiene</a></li>
                <li><a href="#Snacks&BrandedFoods">Snacks & Branded Foods</a></li>
                <li><a href="#cakes&dairy">cakes & dairy</a></li>
            </ul>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="footer-container">
            <!-- About Section -->
            <div class="footer-section">
                <h4>ABOUT</h4>
                <a href="#">Contact Us</a>
                <a href="#">About Us</a>
                <a href="#">Careers</a>
                <a href="#">Our Services</a>         
                <a href="#">Press</a>                 
            </div>

            <!-- Help Section -->
            <div class="footer-section">
                <h4>HELP</h4>
                <a href="#">Payments</a>
                <a href="#">Shipping</a>
                <a href="#">Cancellation</a>
                <a href="#">FAQs</a>                  
                <a href="#">Track Order</a>          
            </div>

            <!-- Consumer Policy Section -->
            <div class="footer-section">
                <h4>CONSUMER POLICY</h4>
                <a href="#">Return Policy</a>
                <a href="#">Terms of Use</a>
                <a href="#">Privacy</a>
                <a href="#">Security</a>            
                <a href="#">Compliance</a>           
            </div>

            <!-- Mail Us Section -->
            <div class="mail-us"  >
                <h4>Mail Us:</h4>
                <p>Speedy Groceries Pvt Ltd,</p>
                <p>123 Main Street,Tamil Nadu, India</p>
                <p>Email: support@speedygroceries.com</p>
                <p>Phone: +91 6380***919</p>
                <p>Support Hours: 9am - 6pm, Mon–Sat</p>
            </div>
        </div>
        <div class="footer-social">
            <a href="https://facebook.com" target="_blank"><i class="bi bi-facebook"></i></a>
            <a href="https://twitter.com" target="_blank"><i class="bi bi-twitter"></i></a>
            <a href="https://instagram.com" target="_blank"><i class="bi bi-instagram"></i></a>
            <a href="https://linkedin.com" target="_blank"><i class="bi bi-linkedin"></i></a>
        </div>
        <p class="footer-p">&copy; 2025 Navindra M. | Built with HTML & CSS</p>
    </footer>


</body>
}
</html>
